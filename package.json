    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.15",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^10.18.0",
    "jose": "^5.10.0",
    "lucide-react": "^0.294.0",
    "next": "^15.5.0",
    "next-intl": "^3.26.5",
    "nodemailer": "^6.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.5",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  },
